@model THLTW_BT3.Models.Category

@{
    ViewData["Title"] = "Cập nhật loại sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Update" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Tên loại</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật loại</button>
    <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">Quay lại danh sách</a>
</form>
