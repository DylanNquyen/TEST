@model THLTW_BT3.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body" style="max-height: 500px; overflow-y: auto;">
        <div>
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 100%; height: auto;" />
        </div>
        <div>
            <h2>@Model.Name</h2>
            <p><strong>Giá:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <p><strong>Danh mục:</strong> @(Model.Category != null ? Model.Category.Name?.Trim() : "Không có danh mục")</p>
        </div>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Quay lại danh sách</a>
    </div>
</div>